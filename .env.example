# Database
# For PostgreSQL (recommended with Prisma)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# For Neon PostgreSQL (use direct connection, not pooler)
# DATABASE_URL=postgresql://user:password@ep-xxxxx.region.aws.neon.tech/dbname?sslmode=require

# JWT - Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Admin - Change this in production!
ADMIN_SECRET=super-secret-admin-key

# Server
PORT=3000
